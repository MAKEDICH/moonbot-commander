# =============================================================================
# ПРИМЕР КОНФИГУРАЦИИ - СКОПИРУЙТЕ В .env И ИЗМЕНИТЕ ЗНАЧЕНИЯ
# =============================================================================

# Секретный ключ для JWT токенов (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ!)
# Генерация: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-to-random-secret-key-minimum-32-characters

# Ключ шифрования для UDP паролей (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ!)
# Генерация: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change-me-to-fernet-encryption-key

# Алгоритм шифрования JWT
ALGORITHM=HS256

# Время жизни токена (в минутах) - по умолчанию 30 дней
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# База данных (по умолчанию SQLite)
DATABASE_URL=sqlite:///./moonbot_commander.db

# CORS - разрешенные источники (через запятую)
# Для продакшена добавьте ваш домен или IP
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# Application Settings
APP_NAME=MoonBot Commander
APP_VERSION=2.0.0
DEBUG=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# UDP Settings
UDP_TIMEOUT=5
UDP_MAX_RETRIES=3

# Backup Settings
BACKUP_ENABLED=true
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_INTERVAL_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=moonbot_commander.log
